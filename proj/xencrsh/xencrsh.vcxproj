	<PropertyGroup>
		<IncludePath>..\..\include;$(IncludePath)</IncludePath>
		<RunCodeAnalysis>true</RunCodeAnalysis>
		<EnableInf2cat>false</EnableInf2cat>
		<IntDir>..\$(ProjectName)\$(ConfigurationName)\$(Platform)\</IntDir>
